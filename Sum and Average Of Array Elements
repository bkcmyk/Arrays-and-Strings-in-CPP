#include <iostream>

using namespace std;

int main() {
    double array[5];
    double sum = 0;
    double avg = 0;
    int n;
    
cout << "Enter the Number of elements u want: \n";
cin>>n;
    cout << "Enter an Array of "<<n<<" Numbers: \n";
    for (int i = 0; i < n; i++) {
        cin >> array[i];
    }
cout<<endl;
    cout << "You entered: ";
    for (int i = 0; i < n; i++) {
        cout << array[i] << " ";
        sum += array[i];  // Sum inside the same loop to optimize
    }
    
    cout << "\n";

    avg = sum / n;
cout<<endl;
    cout << "The sum of Array elements is " << sum << "\n";
    cout<<endl;
    cout << "The average of Array elements is " << avg << "\n";

    return 0;
}

/* OUTPUT
Enter the Number of elements u want: 
6
Enter an Array of 6 Numbers: 
4 5 6 1 2 3

You entered: 4 5 6 1 2 3 

The sum of Array elements is 21

The average of Array elements is 3.5

*/
