#include <iostream>
using namespace std;

int main() {
    int array[5];
    int flag = 0;
    int search_element;
    int count = 0;

    cout << "Enter an Array of Five Numbers: \n";
    for (int i = 0; i < 5; i++) {
        cin >> array[i];
    }
cout<<endl;
    cout << "Enter the Element You Want to Search: \n";
    cin >> search_element;

    for (int i = 0; i < 5; i++) {
        if (array[i] == search_element) {
            cout << "Element Found at Index " << i + 1 << "\n";  // 1-based index
            count++;
            flag = 1;
        }
    }
cout<<endl;
    cout << "The Entered Array is: \n";
    for (int i = 0; i < 5; i++) {
        cout << array[i] << " ";
    }
    cout << "\n";
cout<<endl;
    if (flag == 0) {
        cout << "Element Not Found \n";
    } else {
        cout << "The Element is Present " << count << " times \n";
    }

    return 0;
}

/* OUTPUT

Enter an Array of Five Numbers: 
4 5 6 1 2

Enter the Element You Want to Search: 
5
Element Found at Index 2

The Entered Array is: 
4 5 6 1 2 

The Element is Present 1 times 

*/
