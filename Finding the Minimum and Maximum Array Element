#include <iostream>
using namespace std;

int main() {
    int array[5];
    int n;

    cout << "Enter the Number of elements u want: \n";
cin>>n;
    cout << "Enter an Array of "<<n<<" Numbers: \n";
    for (int i = 0; i < n; i++) {
        cin >> array[i];
    }

    int max = array[0], min = array[0];  

    for (int i = 1; i < n; i++) {
        if (array[i] > max)
            max = array[i];

        if (array[i] < min)
            min = array[i];
    }
cout<<endl;
cout<<"You Entered: \n";
 for (int i = 0; i < n; i++){
     cout<<array[i]<<" ";
 }
 cout<<endl;
    cout << "The Maximum Element of the Array is: " << max << "\n";
    cout << "The Minimum Element of the Array is: " << min << "\n";

    return 0;
}

/* OUTPUT

Enter the Number of elements u want: 
6
Enter an Array of 6 Numbers: 
7 8 9 4 5 6

You Entered: 
7 8 9 4 5 6 
The Maximum Element of the Array is: 9
The Minimum Element of the Array is: 4

*/
